# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME="TuMatch - Análisis de Rentabilidad Arriendos"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# URLs de la aplicación
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

# Configuración UF
NEXT_PUBLIC_UF_API_URL="https://api.cmfchile.cl/api-sbifv3/recursos_api/uf/periodo/"
NEXT_PUBLIC_DEFAULT_UF_VALUE="38000"

# Configuración de email (para envío de propuestas)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@tumatch.cl"
SMTP_PASSWORD="your-password-here"

# Configuración de PDF
PDF_TEMPLATE_PATH="/templates/rental-analysis.html"
PDF_OUTPUT_PATH="/tmp/pdfs/"

# Base de datos (para futuras integraciones)
DATABASE_URL="postgresql://username:password@localhost:5432/rental_analysis"

# API Keys para integraciones futuras
PORTAL_INMOBILIARIO_API_KEY="your-portal-key"
YAPO_API_KEY="your-yapo-key"
MERCADOLIBRE_API_KEY="your-ml-key"

# Configuración de autenticación
JWT_SECRET="your-jwt-secret-here"
SESSION_SECRET="your-session-secret"

# Configuración de logs
LOG_LEVEL="info"
LOG_FILE="./logs/application.log"

# Configuración de notificaciones
NOTIFICATION_EMAIL="notifications@tumatch.cl"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Configuración de analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Configuración de desarrollo
NODE_ENV="development"
DEBUG_MODE="true"